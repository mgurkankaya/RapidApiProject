@model List<ImdbMovieViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IMDb Film Listesi</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">IMDb Film Listesi</h1>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Film Adı</th>
                    <th scope="col">Film Puanı</th>
                    <th scope="col">Görsel</th>
                    <th scope="col">Sitede Gör</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.title</td>
                        <td>@item.rating</td>
                        <td><img src="@item.big_image" style="width:200px; height:250px;" /></td>
                        <td><a href="@item.imdb_link" target="_blank" class="btn btn-outline-success">@item.title</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>